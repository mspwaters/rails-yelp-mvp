<div class="banner">
  <div class="banner-content">
    <h1><%= @restaurant.name %></h1>
    <ul>
      <li style="list-style-type: none;"><%=@restaurant.address%></li>
      <li style="list-style-type: none;"><%=@restaurant.phone_number %></li>
      <li style="list-style-type: none;"><%= @restaurant.category.upcase %></li>
    </ul>
    <h3>Reviews</h3>
    <ul>
      <% @restaurant.reviews.each do |r| %>
        <li style="list-style-type: none;"><% r.rating.times do %>
          <i class="fa fa-star" aria-hidden="true" style="color:#ffff00"></i>
        <% end %>
        </li>
        <li style="list-style-type: none;"><%= r.content %></li>
      <% end %>
    </ul>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant), :class => "btn btn-primary btn-lg" %>
    <%= link_to "Go back", root_path, :class => "btn btn-primary btn-lg" %>
  </div>
</div>




